            "token": {
              "type": "string",
              "minLength": 1
            },
            "tokenSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false,
          "required": ["consumerKey", "consumerSecret", "token", "tokenSecret"]
        }
      },
      "additionalProperties": false,
      "required": ["pixelId", "authentication"]
    }
  },
  "actions": [
