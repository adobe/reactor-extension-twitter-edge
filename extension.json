{
  "displayName": "Twitter",
  "name": "twitter-connector-edge",
  "iconPath": "resources/icons/twitter-logo.svg",
  "platform": "edge",
  "version": "1.0.0",
  "description": "Forward data to Twitter by using the Twitter Ads API.",
  "author": {
